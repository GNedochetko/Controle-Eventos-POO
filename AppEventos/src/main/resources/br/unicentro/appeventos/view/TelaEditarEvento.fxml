<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.unicentro.appeventos.controller.TelaEditarEventoController">

    <children>
        <Label alignment="CENTER" layoutX="29.0" layoutY="6.0" prefHeight="54.0" prefWidth="533.0" text="Insira os dados que você deseja alterar:">
            <font>
                <Font size="22.0" />
            </font>
        </Label>
        <VBox layoutX="47.0" layoutY="60.0" prefHeight="54.0" prefWidth="445.0">
            <children>
                <Label prefHeight="35.0" prefWidth="101.0" text="Nome:" />
                <TextField fx:id="txtNome" />
            </children>
        </VBox>
        <VBox layoutX="47.0" layoutY="129.0" prefHeight="54.0" prefWidth="217.0">
            <children>
                <Label prefHeight="30.0" prefWidth="205.0" text="Data do início do evento:" />
                <DatePicker fx:id="dpDataIni" />
            </children>
        </VBox>
        <VBox layoutX="270.0" layoutY="129.0" prefHeight="54.0" prefWidth="217.0">
            <children>
                <Label prefHeight="30.0" prefWidth="187.0" text="Data do término do evento" />
                <DatePicker fx:id="dpDataFim" />
            </children>
        </VBox>
        <VBox layoutX="47.0" layoutY="206.0" prefHeight="54.0" prefWidth="198.0">
            <children>
                <Label prefHeight="30.0" prefWidth="136.0" text="Preço da entrada:" />
                <TextField fx:id="txtPreco" />
            </children>
        </VBox>
        <VBox layoutX="270.0" layoutY="206.0" prefHeight="54.0" prefWidth="198.0">
            <children>
                <Label prefHeight="30.0" prefWidth="136.0" text="Cidade:" />
                <TextField fx:id="txtCidade" />
            </children>
        </VBox>
        <VBox layoutX="47.0" layoutY="283.0" prefHeight="102.0" prefWidth="462.0">
            <children>
                <Label prefHeight="30.0" prefWidth="158.0" text="Descrição do evento:" />
                <TextArea fx:id="txtDescricao" prefHeight="200.0" prefWidth="200.0" />
            </children>
        </VBox>
        <HBox alignment="CENTER" layoutX="2.0" layoutY="440.0" prefHeight="48.0" prefWidth="588.0" spacing="10.0">
            <children>
                <Button fx:id="btnSalvar" mnemonicParsing="false" onAction="#onActionBtnSalvar" text="Salvar">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#onActionbtnVoltar" prefHeight="32.0" prefWidth="101.0" text="Voltar">
               <font>
                  <Font size="16.0" />
               </font></Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</AnchorPane>
