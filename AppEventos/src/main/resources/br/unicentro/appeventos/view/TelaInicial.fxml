<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.unicentro.appeventos.controller.TelaInicialController">

    <children>
        <Label layoutX="94.0" layoutY="40.0" prefHeight="67.0" prefWidth="412.0"
               text="Bem-vindo(a) ao sistema de controle de eventos!">
            <font>
                <Font size="16.0" />
            </font>
        </Label>

        <Button fx:id="botaoCadastro" layoutX="219.0" layoutY="191.0" mnemonicParsing="false"
                onAction="#botaoCadastroOnAction" text="Cadastrar Evento">
            <font>
                <Font size="16.0" />
            </font>
        </Button>

        <HBox layoutX="119.0" layoutY="266.0" prefHeight="24.0" prefWidth="403.0">
            <children>
                <TextField fx:id="barraPesquisa" onAction="#barraPesquisaOnAction"
                           prefHeight="24.0" prefWidth="244.0" />
                <Button fx:id="botaoPesquisa" mnemonicParsing="false"
                        onAction="#botaoPesquisaOnAction"
                        prefHeight="24.0" prefWidth="134.0" text="Pesquisar Evento" />
            </children>
        </HBox>
    </children>

</AnchorPane>
